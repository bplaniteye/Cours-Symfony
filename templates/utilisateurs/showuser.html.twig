{% extends 'base.html.twig' %}

{% block title %}showuser{% endblock %}

{% block body %}
    <h1>Informations personnelles d'un utilisateur</h1>
 <table class="table table-striped" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
               <!-- <th>Date de naissance</th> -->
                <th>Adresse</th>
                <th>Email</th>
                <th>Login</th>
                <th>Rôle</th>
            
            </tr>
        </thead>
        <tbody>
         {# https://twig.symfony.com/doc/3.x/tags/for.html #}
        
            <tr>           
                <td>{{ utilisateurs.id }}</td>
                <td>{{ utilisateurs.nom }}</td>
                <td>{{ utilisateurs.prenom }}</td>
              <!--  <td>{#{ utilisateurs.date_de_naissance| date("d/m/Y") }#}</td> -->
