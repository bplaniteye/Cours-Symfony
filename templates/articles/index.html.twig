{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles index</h1>
 <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
         {# https://twig.symfony.com/doc/3.x/tags/for.html #}
        {% for article in articles %}
            <tr>           
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
                <td>
                <button class="bouton">  <a class="lien" href="{{ path('articles_affichage',{ 'id':article.id }) }}"> Afficher </a> </button>
                </td>               
            </tr>
             {% endfor %}
        </tbody>
    </table>
        
     
{% endblock %}
