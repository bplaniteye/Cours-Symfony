{% extends 'base.html.twig' %}

{% block title %} Info catégorie {% endblock %}

{% block body %}
	{% include 'admin_menu.html.twig' %}

	<div class="mt-5">
		<button class="rounded-full py-3 px-6 bg-gray-600">
			<a class="lien" href="{{ path('index_auteurs') }}">Retour au tableau des auteurs</a>
		</button>

		<button class="rounded-full py-3 px-6 bg-gray-600">
			<a class="lien" href="{{ path('index_auteurs_formulaire') }}"> Enregistrer un nouvel auteur</a>
		</button>
	</div>

	<h1 class="text-4xl text-center font-bold mt-5">INFORMATIONS SUR L'AUTEUR</h1>


	<div class="flex flex-col mt-5">

		<div class="flex justify-center">
			<div class="w-32 h-32 bg-gray-600 rounded-full text-4xl mr-5 flex items-center text-white justify-center font-bold">
				{{ id }}
			</div>

			<div class="text-center p-auto w-4/5 h-auto text-white rounded-full bg-gray-600 flex items-center justify-center font-bold text-2xl">
				Nom:
				{{ auteur.nom }}
				<br>
				Prénom :
				{{ auteur.prenom }}
				<br>
				Email :
				{{ auteur.email }}
			</div>
		</div>
	</div>
</div>


{% endblock %}
