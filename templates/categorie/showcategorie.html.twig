{% extends 'base.html.twig' %}

{% block title %}Info catégorie{% endblock %}

{% block body %}
{% include 'admin_menu.html.twig' %}

<div class="mt-5">
<button class="rounded-full py-3 px-6 bg-green-600">
  <a class="lien" href="{{ path('index_categorie') }}">Retour au tableau des catégories</a> 
</button>

<button class="rounded-full py-3 px-6 bg-green-600">
  <a class="lien" href="{{ path('index_newcategorie') }}"> Créer une nouvelle catégorie</a> 
</button>

<button class="rounded-full py-3 px-6 bg-green-600">
  <a class="lien" href="{{ path('index_categorieform1') }}">Formulaire #1</a> 
</button>

<button class="rounded-full py-3 px-6 bg-green-600">
  <a class="lien" href="{{ path('index_categorieform2') }}">Formulaire #2</a> 
</button>
</div>

<h1 class="text-4xl text-center text-green-600 font-bold mt-5">INFORMATIONS SUR LA CATEGORIE</h1> 


<div class="flex flex-col mt-5">

    <div class="flex justify-center">
        <div class="w-32 h-32 bg-green-600 rounded-full text-4xl mr-5 flex items-center text-white justify-center font-bold"> {{ id }}
        </div>
       
        <div class="text-center p-auto w-4/5 h-auto text-white rounded-full bg-green-600 flex items-center justify-center font-bold text-2xl"> NOM DE LA CATEORIE <br> {{ categorie.titre }}
         </div>        
    </div>

    <div class="flex justify-center mt-5">
        
        <div class="w-full h-auto p-3 rounded-full text-white bg-green-600 text-center flex items-center justify-center font-bold text-2xl"> RESUME <br> {{ categorie.resume }} </div>
    
    </div>

</div>

   <div class="text-center text-white bg-green-600 flex flex-col font-bold mt-5"> 
   <h2 class="mt-5">ARTICLES LIES A CETTE CATEGORIE</h2> 
   <ol>
   {% for art in article %}
<li> {{ art.titre }} </li>
</ol>
{% endfor %}
         </div>



  






 
        
     
{% endblock %}
